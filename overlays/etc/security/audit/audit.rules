# LockClaw audit baseline
-D
-b 8192
-f 1

# Watch auth and identity files
-w /etc/passwd -p wa -k identity
-w /etc/group -p wa -k identity
-w /etc/shadow -p wa -k identity
-w /etc/sudoers -p wa -k sudoers
-w /etc/ssh/sshd_config -p wa -k sshd

# Privilege escalation tools
-w /usr/bin/sudo -p x -k priv_esc
-w /usr/bin/su -p x -k priv_esc

# Firewall config changes
-w /etc/nftables.conf -p wa -k firewall

# Network config changes
-w /etc/NetworkManager/ -p wa -k network
-w /etc/systemd/resolved.conf -p wa -k dns

# Fail2ban config changes
-w /etc/fail2ban/ -p wa -k fail2ban
