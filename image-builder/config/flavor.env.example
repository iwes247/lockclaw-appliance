# Copy to image-builder/config/flavor.env and customize.

# Flavor identity
DISTRO_NAME="LockClaw"
DISTRO_VERSION="0.1.0"
TARGET_ARCH="x86_64"

# OpenClaw baseline (authoritative source in docs/design-spec.md)
OPENCLAW_UPSTREAM="https://github.com/openclaw/openclaw.git"
OPENCLAW_REF="v2026.2.19"

# Artifact policy
ARTIFACT_TYPE="container"    # container | iso | qcow2 | raw
SSH_POLICY="enabled-hardened" # enabled-hardened | disabled
FIREWALL_POLICY="enabled-deny-default"

# Image build toolchain placeholder (fill when selected)
IMAGE_TOOLCHAIN="UNSET"
